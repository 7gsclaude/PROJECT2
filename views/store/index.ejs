<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kelly+Slab&display=swap" rel="stylesheet">

    <title>Gas&Nectar</title>
</head>

<body>
    <header>
        <nav id='menu'>
            <input type='checkbox' id='responsive-menu'><label></label>
            <ul>
                <li><a href="/events/gasandnectar">Home</a></li>
                <li><a href="/store/gasandnectar">Merch Plug</a></li>
            </ul>
        </nav>
        DEV <br>
        <a href="/store/gasandnectar/new">Add new Store item </a>
        <h1 id="store-title-page">GAS&NECTAR Store</h1>    
    </header>
    <main>
        <h2>Merch</h2>
     
        <% for(let i=0; i < store.length; i++){ %>
            <div class="parent">
        
                <div class="div1">
                    <ul>
                        <li>
                            <a href="/store/gasandnectar/<%=store[i]._id%>">
                                <!-- to store show page ^ -->
                                <img id="storeImg" src="<%=store[i].img%>" alt="Shop Photo">
                            </a>
                        </li>
                    </ul>
                </div>
                <ul>
                    <div class="div2">
                        <li>
                           <a href="<%=store[i].link%>">Buy Here</a> 
                        </li>

                        <li>
                            <%=store[i].name%>
                        </li>
                    </div>
                </ul>
        
            </div>
            <%}%>
    </main>
</body>

</html>